<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirigir HTTP a HTTPS (opcional, descomentar si es necesario)
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Si el archivo solicitado existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Si el directorio solicitado existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Si no es un archivo ni directorio, redirigir todo al index.html (para SPA routing)
  RewriteRule ^ index.html [L]
</IfModule>

# Configuración de seguridad y rendimiento
<IfModule mod_headers.c>
  # Habilitar CORS si es necesario
  Header set Access-Control-Allow-Origin "*"
  
  # Cache para assets estáticos
  <FilesMatch "\.(ico|jpg|jpeg|png|gif|css|js|woff|woff2|ttf|svg)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>

# Compresión GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

